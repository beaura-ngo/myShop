{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <div class="text-center">
        <h1>Products in {{ category.name }}</h1> 
    </div>
        <section class="py-5 bg-light">
            <div class="container px-4 px-lg-5 mt-5">
                <h2 class="fw-bolder mb-4">All products</h2>
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {% for p in categorizeProducts %}
                    <div class="col mb-5">
                        <div class="card h-100">
						{% if p.images is not empty %}
						<img class="card-img-top" src={{ p.images[0].name }} alt="Image du produit {{ p.name }}"/>
						{% endif %}
                        <div class="card-body p-4">
                            <div class="text-center">
                                 <a  href="{{ path('app_products_details', { 'slug': p.slug }) }}">
                                    <h5 class="fw-bolder" >{{ p.name }}</h5>
                                </a>
                            <span class="">${{ p.price }}</span>
                            </div>
                        </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </section>
{% endblock %}
