{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        {% for product in allProducts %}
        <div class="col mb-5">
            <div class="card h-100">
                {% if product.images is not empty %}
                <img class="card-img-top" src={{ product.images[0].name }} alt="Image du produit {{ product.name }}"/>
                {% endif %}
                <div class="card-body p-4">
                    <div class="text-center">
                        <a  href="{{ path('app_products_details', { 'slug': product.slug }) }}">
                        <h5 class="fw-bolder" >{{ product.name }}</h5>
                        </a>
                        <span class="">${{ product.price }}</span>
                    </div>
                </div>
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center">
                        <a class="btn btn-outline-dark mt-auto" href="{{ path('app_products_details', {'slug': product.slug}) }}">Add to cart</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}

    </div>
</div>
{% endblock %}
